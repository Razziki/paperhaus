<h1>Order #<%= @order.id %></h1>

<p>
  Placed on <%= @order.created_at.to_fs(:long) %><br>
  Ship to:
  <%= @order.user.address_line1 %>,
  <%= @order.user.city %>,
  <%= @order.user.province&.name %>
</p>

<h2>Items</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Qty</th>
      <th>Unit Price</th>
      <th>Line Total</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.quantity %></td>
        <td><%= number_to_currency(item.unit_price_cents / 100.0) %></td>
        <td><%= number_to_currency(item.total_cents / 100.0) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>Totals</h2>
<p>Subtotal: <%= number_to_currency(@order.subtotal_cents / 100.0) %></p>
<p>Tax: <%= number_to_currency(@order.tax_cents / 100.0) %></p>
<p>Shipping: <%= number_to_currency(@order.shipping_cents / 100.0) %></p>
<p><strong>Total: <%= number_to_currency(@order.total_cents / 100.0) %></strong></p>

<p><%= link_to "Back to My Orders", orders_path %></p>
