<h1>My Orders</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>Date</th>
      <th>Total</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= link_to "##{order.id}", order_path(order) %></td>
        <td><%= order.created_at.to_s(:short) %></td>
        <td><%= number_to_currency(order.grand_total) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
